  .profile-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid #FFFFFF;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.25);
    object-fit: cover;
  }
  .section {
    position: relative;
    display: flex;
    justify-content: center;
    overflow: visible;
