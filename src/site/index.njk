<style>
  /* --- CSS VARIABLES FOR THEMES --- */
  :root {
    --bg-color-light: #f7f3e9;
    --text-color-light: #000;
    --navbar-bg-light: rgba(180, 175, 165, 0.1);
    --navbar-border-light: rgba(0, 0, 0, 0.15);
    --navbar-link-light: #007AFF;
    --navbar-hover-bg-light: rgba(0, 0, 0, 0.9);
    --navbar-hover-text-light: #f7f3e9;
    --profile-border-light: #FFFFFF;
    --footer-bg-light: #111;
    --footer-text-light: #666;
    --footer-icon-filter-light: invert(0.5);
    --footer-icon-hover-filter-light: invert(1);
    
    --bg-color-dark: #121212;
    --text-color-dark: #E0E0E0;
    --navbar-bg-dark: rgba(28, 28, 28, 0.5);
    --navbar-border-dark: rgba(255, 255, 255, 0.15);
    --navbar-link-dark: #0A84FF;
    --navbar-hover-bg-dark: rgba(255, 255, 255, 0.9);
    --navbar-hover-text-dark: #121212;
    --profile-border-dark: #2C2C2C;
    --footer-bg-dark: #1C1C1C;
    --footer-text-dark: #A0A0A0;
    --footer-icon-filter-dark: invert(0.8);
    --footer-icon-hover-filter-dark: invert(1);
  }

  body {
    background-color: var(--bg-color-light);
    color: var(--text-color-light);
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .navbar-wrapper {
    position: fixed;
    width: 100%;
    top: 20px;
    z-index: 1001;
    display: flex;
    justify-content: center;
  }
  .navbar {
    display: flex;
    padding: 8px 12px;
    background-color: var(--navbar-bg-light);
    border: 1px solid var(--navbar-border-light);
    border-radius: 9999px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }
  .navbar a {
    scroll-behavior: smooth;
    cursor: pointer;
    padding: 10px 20px;
    border-radius: 9999px;
    color: var(--navbar-link-light);
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
  }
  .navbar a:hover {
    background-color: var(--navbar-hover-bg-light);
    color: var(--navbar-hover-text-light);
  }

  /* --- DARK MODE STYLES --- */
  body.dark-mode {
    background-color: var(--bg-color-dark);
    color: var(--text-color-dark);
  }
  .dark-mode .navbar {
    background-color: var(--navbar-bg-dark);
    border-color: var(--navbar-border-dark);
  }
  .dark-mode .navbar a {
    color: var(--navbar-link-dark);
  }
  .dark-mode .navbar a:hover {
    background-color: var(--navbar-hover-bg-dark);
    color: var(--navbar-hover-text-dark);
  }
  .dark-mode .profile-photo {
    border-color: var(--profile-border-dark);
  }
  .dark-mode .footer-compact {
    background-color: var(--footer-bg-dark);
    color: var(--footer-text-dark);
  }
  .dark-mode .footer-socials-compact img {
    filter: var(--footer-icon-filter-dark);
  }
  .dark-mode .footer-socials-compact a:hover img {
    filter: var(--footer-icon-hover-filter-dark);
  }

  /* --- THEME SWITCHER --- */
  .theme-switcher {
    position: fixed;
    top: 30px;
    right: 30px;
    z-index: 1002;
    cursor: pointer;
    background-color: rgba(180, 175, 165, 0.2);
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 50%;
    width: 44px;
    height: 44px;
    display: flex;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(10px);
  }
  .dark-mode .theme-switcher {
    background-color: rgba(28, 28, 28, 0.5);
    border-color: rgba(255, 255, 255, 0.15);
  }
  .theme-switcher svg {
    width: 24px;
    height: 24px;
    fill: var(--text-color-light);
  }
  .dark-mode .theme-switcher svg {
    fill: var(--text-color-dark);
  }
  #sun-icon { display: none; }
  .dark-mode #moon-icon { display: none; }
  .dark-mode #sun-icon { display: block; }
  

  /* --- CORRECTED PROFILE PHOTO STYLES --- */
  .profile-photo-container {
    position: absolute; /* Lifts the element out of the document flow */
    width: 100%;
    top: 85px; /* Distance from the top of the page */
    left: 0;
    display: flex;
    justify-content: center;
    z-index: 10; /* Places it on top of the hero video */
  }
  .profile-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid var(--profile-border-light);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.25);
    object-fit: cover;
    transition: border-color 0.3s ease;
  }

  .section {
    position: relative;
    display: flex;
    justify-content: center;
    overflow: visible;
  }
  
