    border-radius: 9999px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
  .navbar a {
    scroll-behavior: smooth;
    cursor: pointer;
    /* --- RESTORED --- */
    padding: 6px 16px;
