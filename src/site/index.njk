  /* --- Styles for REDESIGNED Social Cards --- */
  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
    padding-top: 20px;
  }
  .social-card {
    background: #222;
    border-radius: 15px;
    padding: 25px;
    color: white;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #444;
    display: block;
  }
  .social-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
  }
  .social-card .flexing-like-a-douche {
    align-items: center;
  }
  .social-card .detail img {
    width: 40px; /* Larger icons */
    height: 40px;
    margin-right: 20px;
    filter: invert(1); /* Makes icons white */
  }
  .social-card h4 {
    margin: 0 0 5px 0;
    font-size: 1.2em;
  }
  .social-card p {
    margin: 0;
    color: #aaa;
    font-size: 0.9em;
  }

  /* --- Styles for REDESIGNED Contact Form --- */
  .contact-form-section {
    background: #000; /* Dark background to match energetic vibe */
    color: white;
  }
  .contact-form-section .content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }
  .contact-form-section h3 {
    font-size: 2.5em;
    margin-bottom: 10px;
  }
  .contact-form-section p {
    font-size: 1.1em;
    color: #bbb;
    margin-bottom: 40px;
  }
  .contact-form-section input,
  .contact-form-section textarea {
    width: 100%;
    background-color: #1a1a1a;
    border: 2px solid #444;
    border-radius: 10px;
    padding: 15px;
    font-size: 16px;
    color: white;
    margin-bottom: 20px;
    transition: border-color 0.3s ease;
    box-sizing: border-box;
  }
  .contact-form-section input:focus,
  .contact-form-section textarea:focus {
    outline: none;
    border-color: #007bff; /* Highlight color */
  }
  .contact-form-section textarea {
    height: 160px;
    resize: vertical;
  }
  .contact-form-section button {
    width: 100%;
    padding: 18px;
    font-size: 18px;
    font-weight: bold;
    color: white;
    background-image: linear-gradient(45deg, #007bff, #c700ff);
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .contact-form-section button:hover {
    transform: scale(1.02);
    box-shadow: 0 5px 15px rgba(199, 0, 255, 0.3);
  }
</style>

