  .social-card-final {
    position: relative;
    background: #ffffff; /* Crisp white background */
    border-radius: 20px;
    border: 1px solid #e5e5e5; /* Subtle border */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05); /* Soft shadow to make it float */
    overflow: hidden;
    text-decoration: none;
    color: #111; /* Dark text for readability */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: block;
  }
  .social-card-final:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
  }
  /* The animated gradient border */
  .social-card-final::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 20px;
    padding: 2px; /* The thickness of the border */
    background: conic-gradient(from 180deg at 50% 50%, #c700ff, #007bff, #00ff88, #c700ff);
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s ease;
    animation: rotateGradient 4s linear infinite paused;
  }
  .social-card-final:hover::before {
    opacity: 1;
    animation-play-state: running;
  }
  @keyframes rotateGradient {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  .social-card-final .card-content {
    padding: 30px;
  }
  .social-card-final .detail img {
