<style>
  /* --- GENERAL & NAVBAR --- */
  .navbar-wrapper {
    position: fixed;
    width: 100%;
    top: 20px;
    z-index: 1001;
    display: flex;
    justify-content: center;
  }
  .navbar {
    display: flex;
    padding: 8px 12px;
    background-color: rgba(180, 175, 165, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 9999px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
  .navbar a {
    scroll-behavior: smooth;
    cursor: pointer;
    padding: 10px 20px;
    border-radius: 9999px;
    color: #007AFF;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
  }
  .navbar a:hover {
    background-color: rgba(0, 0, 0, 0.9);
    color: #f7f3e9;
  }

  /* --- PROFILE PHOTO --- */
  .profile-photo-container {
    position: absolute;
    width: 100%;
    top: 85px;
    left: 0;
    display: flex;
    justify-content: center;
    z-index: 20; /* High z-index to stay on top */
  }
  .profile-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 5px solid #FFFFFF;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.25);
    object-fit: cover;
  }

  /* --- CORE LAYOUT & STACKING FIX --- */
  .papa-wrapper {
    position: relative;
    z-index: 1;
  }
  .section {
    position: relative;
    display: flex;
    justify-content: center;
    overflow: visible;
  }
  .big-hero-six {
    padding-top: 180px;
    z-index: 5; /* Keep hero section context high */
  }
  
  /* Content (including showcase cards) is lifted on top */
  .main-content-wrapper {
    position: relative;
    z-index: 2;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center; /* Better for vertical alignment */
    flex-direction: column; /* Align content vertically */
  }
  
  /* --- WAVE STYLES (UPDATED FOR OVERLAP) --- */
  .wave {
    position: absolute;
    width: 100%;
    left: 0;
    z-index: 1; /* Sits behind the main content */
  }
  .wave-top {
    top: 0;
    /* Moves the wave up so the section's background doesn't show above it */
    transform: translateY(-99%); 
  }
  .wave-bottom {
    bottom: 0;
  }
  
  /* --- FOOTER --- */
  .footer-compact {
    background-color: #111;
    color: #666;
    padding: 25px 20px;
    text-align: center;
    width: 100%;
  }
  .footer-socials-compact a { display: inline-block; margin: 0 12px; }
  .footer-socials-compact img {
    width: 24px;
    height: 24px;
    filter: invert(0.5);
    transition: filter 0.3s ease;
  }
  .footer-socials-compact a:hover img { filter: invert(1); }
  .footer-copyright-compact { margin-top: 20px; font-size: 0.85em; }

  /* --- FLOATING ACTION BUTTON (FAB) --- */
  .fab-container {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 1000;
    cursor: pointer;
  }
  /* ... other FAB styles ... */
</style>

