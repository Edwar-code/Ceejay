  }

  .content blockquote {
      border-left: 3px solid #007AFF; /* Using a primary blue for quotes */
      margin: 2em 0;
      padding: 10px 25px;
      font-style: italic;
      color: #555; /* Dark grey for readability on a white background */
      font-size: 1.05em;
  }
  
  /* --- ADDED: Button Styles --- */
  .btn-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 12px 28px;
    border-radius: 9999px;
    color: #FFFFFF;
    font-weight: 700;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 1em; /* Adds some space above the button */
  }
  .btn-cta:hover {
    transform: translateY(-3px);
  }
  .btn-cta img {
    width: 20px;
    height: 20px;
    filter: brightness(0) invert(1);
  }
  .btn-telegram {
    background-color: #26A5E4;
    box-shadow: 0 4px 15px rgba(38, 165, 228, 0.3);
  }
  .btn-telegram:hover {
    box-shadow: 0 8px 20px rgba(38, 165, 228, 0.5);
  }

  /* --- Image Card Styling --- */
  .showcase .card img {
      width: 100%;
      height: 100%;
      object-fit: cover; /* Ensures images fill the card without distortion */
      border-radius: inherit; /* Inherits the card's rounded corners */
  }

  .footer-compact {
    background-color: #111;
    color: #666;
    padding: 25px 20px;
    text-align: center;
  }
  .footer-socials-compact a {
    display: inline-block;
    margin: 0 12px;
  }
  .footer-socials-compact img {
    width: 24px;
    height: 24px;
    filter: invert(0.5); /* Default state for all icons: Makes them grey */
    transition: filter 0.3s ease, transform 0.3s ease;
  }
  /* --- FIX: Only adjust the size of the TikTok icon, let it inherit the filter --- */
