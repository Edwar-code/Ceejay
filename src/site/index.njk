<style>
  /* --- ELITE UPGRADE STYLES --- */

  /* --- 1. "Connect & Conquer" Social Cards --- */
  .social-section-elite {
    background: #111; /* Darker, more premium background */
  }
  .social-grid-elite {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem; /* More spacing */
    padding-top: 20px;
  }
  .social-card-elite {
    position: relative;
    padding: 30px;
    background: rgba(255, 255, 255, 0.05); /* Glassmorphism base */
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    overflow: hidden;
    text-decoration: none;
    color: white;
    transition: transform 0.3s ease;
  }
  .social-card-elite:hover {
    transform: translateY(-10px);
  }
  /* The animated gradient border */
  .social-card-elite::before {
    content: '';
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    border-radius: 20px;
    background: conic-gradient(
      from 180deg at 50% 50%,
      #c700ff, #007bff, #00ff88, #c700ff
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    animation: rotateGradient 4s linear infinite paused;
  }
  .social-card-elite:hover::before {
    opacity: 1;
    animation-play-state: running;
  }
  /* The content that sits above the border */
  .social-card-elite .card-content {
    position: relative;
    z-index: 2;
    background: #1a1a1a; /* Dark interior to make border pop */
    padding: 25px;
    border-radius: 16px;
    height: 100%;
    box-sizing: border-box;
  }
  @keyframes rotateGradient {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  .social-card-elite .detail img {
    width: 40px;
    height: 40px;
    margin-right: 20px;
    filter: invert(1);
  }
  .social-card-elite h4 {
    margin: 0 0 8px 0;
    font-size: 1.3em;
    font-weight: 600;
  }
  .social-card-elite p {
    margin: 0;
    color: #bbb;
    font-size: 0.95em;
    line-height: 1.5;
  }

  /* --- 2. "Let's Build Together" Contact Form --- */
  .contact-section-elite {
    background: #0d0d0d;
    color: white;
    padding-bottom: 50px; /* More space at the bottom */
  }
  .contact-section-elite .content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }
  .contact-section-elite h3 {
    font-size: 3em; /* More impactful title */
    background: -webkit-linear-gradient(45deg, #007bff, #c700ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 15px;
  }
  .contact-section-elite p {
    font-size: 1.2em;
    color: #aaa;
    margin-bottom: 50px;
  }
  .form-group {
    position: relative;
    margin-bottom: 35px;
  }
  .form-input {
    width: 100%;
    background: transparent;
    border: none;
    border-bottom: 2px solid #555;
    padding: 10px 0;
    font-size: 18px;
    color: white;
    outline: none;
    transition: border-color 0.3s ease;
    box-sizing: border-box;
  }
  .form-label {
    position: absolute;
    top: 10px;
    left: 0;
    font-size: 18px;
    color: #888;
    pointer-events: none;
    transition: all 0.3s ease;
  }
  .form-input:focus + .form-label,
  .form-input:not(:placeholder-shown) + .form-label {
    top: -20px;
    font-size: 14px;
    color: #007bff;
  }
  .form-input:focus {
    border-bottom-color: #007bff;
  }
  textarea.form-input {
    resize: vertical;
    min-height: 120px;
  }
  .submit-btn {
    width: 100%;
    padding: 20px;
    font-size: 18px;
    font-weight: bold;
    color: white;
    background: linear-gradient(45deg, #007bff, #5a00e0);
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .submit-btn:hover {
    transform: scale(1.03);
    box-shadow: 0 8px 25px rgba(90, 0, 224, 0.4);
  }
</style>

