    --text-secondary: #a1a1a6;
    --text-on-dark: #f5f5f7;

    --accent-color: #0A84FF; /* Brighter blue for dark mode */
    --nav-bg: rgba(28, 28, 30, 0.5);
    --nav-border: rgba(255, 255, 255, 0.15);
    --nav-hover-bg: rgba(255, 255, 255, 0.9);
    --nav-hover-text: #1c1c1e;

    --profile-border: #2c2c2e;
    --profile-shadow: rgba(0, 0, 0, 0.5);
    
    --footer-bg: #1c1c1e;
    --footer-social-filter: invert(0.8);
    --footer-social-filter-hover: invert(1);

    --wave-fill-1: var(--bg-secondary); /* Fill with next section's bg */
    --wave-fill-2: var(--bg-tertiary);
    --wave-fill-3: var(--bg-primary);
  }

  /* Apply a smooth transition to color changes */
  body, .navbar, .navbar a, .profile-photo, .footer-compact, .footer-socials-compact img, .fab-main, .section, svg path {
    transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out, border-color 0.3s ease-in-out, fill 0.3s ease-in-out, filter 0.3s ease-in-out;
  }

  body {
    background-color: var(--bg-primary);
    color: var(--text-primary);
  }

  .navbar-wrapper {
    position: fixed;
    width: 100%;
    top: 20px;
    z-index: 1001;
    display: flex;
    justify-content: center;
  }
  .navbar {
    display: flex;
    align-items: center; /* Vertically center items */
    gap: 8px; /* Add space between links and button */
    padding: 8px 12px;
    background-color: var(--nav-bg);
    border: 1px solid var(--nav-border);
    border-radius: 9999px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
  .navbar a {
    scroll-behavior: smooth;
    cursor: pointer;
    padding: 10px 20px;
    border-radius: 9999px;
    color: var(--accent-color);
    font-size: 0.875rem;
